

<%@pokemons.each do |pokemon| %>
<div class="container mx-auto mt-4">
  <div class="row">
    <div class="col-md-4">

  <div class="card" style="width: 18rem;">
    <%= link_to pokemon_path(pokemon), class:"text-decoration-none" do %>

      <div class="card-body">
        <h5 class="card-title">Pokemon</h5>

         <h6 class="card-subtitle mb-2 text-muted">Pokemon</h6>

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= pokemon.name %></li>
          <li class="list-group-item"><%= pokemon.element %></li>
          <li class="list-group-item"><%= pokemon.move %></li>
        </ul>


        <%= image_tag pokemon.image_path, class: "w-100" %>


        <a href="#" class="btn btn-primary">Rent this Pokemon</a>
      </div>
    <% end %>
  </div>
  </div>
</div>
<% end %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>  

