




<div class="banner" style="background-image:  linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/1716861/pexels-photo-1716861.jpeg?cs=srgb&dl=pexels-carolina-castilla-arias-1716861.jpg&fm=jpg);">
  <div class="banner-content">
    <h1>My Profile</h1>
  </div>
</div>

<div class="container py-5">
  <div class="col-6">
    <h1> Account Details: </h1>

    <%=current_user.email%>
    <p></p>
    <h4> Number of Pokemons: </h4>
    <%= current_user.pokemons.length %>
    <p></p>

    <h4> Names: </h4>
      <% current_user.pokemons.each do |pokemon| %>
      <p> <%= pokemon.name %></p>
      <%= pokemon.image_path %>
      <% end  %>

  <p></p>


  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Add your pokemons here", new_pokemon_path, class: "btn btn-primary" %>
  </div>

    <div class="d-flex align-items-center justify-content-between mb-3">
    <h4> <%= link_to "Book a Battle!", class: "btn btn-primary" %> </h4>
   </div>
</div>
</div>


  <p></p>

<div class="col-12">
  <div class="container pb-2" style="border-top: 1px solid lightgrey !important; border-bottom: 1px solid lightgrey !important;">
    <h1>My booked pokemons: </h1>
    <p></p>
    <div class="row">
      <% current_user.bookings.each do |booking| %>
        <div class="col-sm-6 col-md-4 col-lg-3">

            <div class="mb-3" style="width: 100%; border-radius: 8px;">
              <div class="card-body">
                <p>Booked for <%= booking.date %></p>
                <p><em>Pokemon: <%= booking.pokemon.name %></em></p>
                <p>Owner: <%= booking.pokemon.user.email %></p>
              </div>
            </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
